<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    android:background="@drawable/shadow_bg">

    <ImageView
        android:id="@+id/imageCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/basmati" />

    <com.netbazaar.view.NetbazaarTextView
        android:id="@+id/textCategoryName"
        android:layout_below="@+id/imageCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/popular_dishes"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_5sdp"
        android:textFontWeight="600"
        app:textStyle="@integer/poppins_semibold" />

</RelativeLayout>