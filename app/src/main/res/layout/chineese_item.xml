<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="300dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_140sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:layout_margin="@dimen/_4sdp"
        app:cardMaxElevation="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="121dp"
                android:layout_height="120dp"
                android:src="@drawable/noodles" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.netbazaar.view.NetbazaarTextView
                    android:id="@+id/textPlaceOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/beef_burger"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_8sdp"
                    app:textStyle="@integer/poppins_semibold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8sdp">
                    <com.netbazaar.view.NetbazaarTextView
                        android:id="@+id/textDollar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_5sdp"
                        app:textStyle="@integer/poppins_regular"/>
                    <com.netbazaar.view.NetbazaarTextView
                        android:id="@+id/textPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.45"

                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp"
                        app:textStyle="@integer/poppins_semibold"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:elevation="15dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/add" />

</RelativeLayout>
