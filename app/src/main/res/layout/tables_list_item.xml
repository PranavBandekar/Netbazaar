<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    android:divider="@android:color/transparent"
    app:cardElevation="10dp"
    android:layout_margin="@dimen/_3sdp"
    app:cardMaxElevation="12dp">

    <LinearLayout
        android:layout_width="@dimen/_113sdp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:weightSum="2">

            <com.netbazaar.view.NetbazaarTextView
                android:id="@+id/textCustomerNameNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:layout_weight="1"
                app:textStyle="@integer/poppins_semibold" />

            <com.netbazaar.view.NetbazaarTextView
                android:id="@+id/textTableNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:text="#1"
                android:textColor="@color/red"
                android:textSize="@dimen/_10sdp"
                app:textStyle="@integer/poppins_semibold" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/_4sdp"
            android:background="@color/light_gray"/>

        <FrameLayout
            android:id="@+id/btnOrder"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@drawable/order_btn_bg">

            <com.netbazaar.view.NetbazaarTextView
                android:id="@+id/textLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_2sdp"
                android:text="@string/order"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp"
                app:textStyle="@integer/poppins_regular" />

        </FrameLayout>

    </LinearLayout>




</androidx.cardview.widget.CardView>