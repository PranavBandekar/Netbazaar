   <androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:layout_margin="@dimen/_4sdp"
        app:cardMaxElevation="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="82dp"
                android:src="@drawable/indian_street_food" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.netbazaar.view.NetbazaarTextView
                    android:id="@+id/textPlaceOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/beef_burger"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    app:textStyle="@integer/poppins_semibold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.netbazaar.view.NetbazaarTextView
                        android:id="@+id/textCheeseName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cheesy_mozarella"
                        android:textColor="@color/gray"
                        android:textSize="11sp"
                        app:textStyle="@integer/poppins_regular"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cheese" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp">
                    <com.netbazaar.view.NetbazaarTextView
                        android:id="@+id/textDollar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textColor="@color/red"
                        android:textSize="11sp"
                        app:textStyle="@integer/poppins_regular"/>
                    <com.netbazaar.view.NetbazaarTextView
                        android:id="@+id/textPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.45"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        app:textStyle="@integer/poppins_semibold"
                        />

                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="89dp"
                android:layout_height="89dp"
                android:src="@drawable/add" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

