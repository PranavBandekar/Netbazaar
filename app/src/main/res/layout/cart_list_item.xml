<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_margin="@dimen/_4sdp"
            app:cardMaxElevation="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="82dp"
                    android:src="@drawable/burger" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.netbazaar.view.NetbazaarTextView
                        android:id="@+id/textPlaceOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/beef_burger"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp"
                        app:textStyle="@integer/poppins_semibold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.netbazaar.view.NetbazaarTextView
                            android:id="@+id/textCheeseName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cheesy_mozarella"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_5sdp"
                            app:textStyle="@integer/poppins_regular"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cheese" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp">
                        <com.netbazaar.view.NetbazaarTextView
                            android:id="@+id/textDollar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textColor="@color/red"
                            android:textSize="@dimen/_5sdp"
                            app:textStyle="@integer/poppins_regular"/>
                        <com.netbazaar.view.NetbazaarTextView
                            android:id="@+id/textPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5.45"

                            android:textColor="@color/black"
                            android:textSize="@dimen/_8sdp"
                            app:textStyle="@integer/poppins_semibold"
                            />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:src="@drawable/minus" />
                        <com.netbazaar.view.NetbazaarTextView
                            android:id="@+id/textCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"

                            android:textColor="@color/black"
                            android:textSize="@dimen/_8sdp"
                            app:textStyle="@integer/poppins_semibold"
                            />

                        <ImageView
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:src="@drawable/plus" />
                    </LinearLayout>
                    <ImageView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:src="@drawable/note" />

                </LinearLayout>



            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </FrameLayout>
    <ImageView
        android:layout_width="@dimen/_23sdp"
        android:layout_height="@dimen/_23sdp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-12dp"
        android:layout_marginTop="-5dp"
        android:src="@drawable/cart_close" />

</RelativeLayout>
